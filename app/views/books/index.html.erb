<% if user_signed_in? %>

<h1>Book List</h1>
<table class ="table table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Author(s)</th>
      <th>Publisher</th>
      <th>Edition</th>
      <th>Pages</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
      <% if book.user == current_user %>
        <%= render book %>
      <% end %>
  <% end %>
  </tbody>
</table>

<%= link_to "New book", new_book_path, class: "btn btn-secondary" %>

<% else %>
<h1>Welcome to the bookshelf!</h1>
Sign in or sign up to get stacking!
<% end %>
