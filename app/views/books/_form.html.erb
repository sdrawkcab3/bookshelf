<%= form_with(model: book) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <% form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control", placeholder: :title %>
  </div>

  <div class="field form-group">
    <% form.label :authors, style: "display: block" %>
    <%= form.text_field :authors, class: "form-control", placeholder: :authors %>
  </div>

  <div class="field form-group">
    <% form.label :publisher, style: "display: block" %>
    <%= form.text_field :publisher, class: "form-control", placeholder: :publisher %>
  </div>

  <div class="field form-group">
    <% form.label :edition, style: "display: block" %>
    <%= form.text_field :edition, class: "form-control", placeholder: :edition %>
  </div>

  <div class="field form-group">
    <% form.label :pages, style: "display: block" %>
    <%= form.text_field :pages, class: "form-control", placeholder: :pages %>
  </div>

  <div class="field form-group">
    <% form.label :isbn, style: "display: block" %>
    <%= form.text_field :isbn, class: "form-control", placeholder: "ISBN 10 or 13" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :books_user_id, value: current_user.id, type: :hidden %>
  </div>


<br/>
  <div>
    <%= form.submit class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
